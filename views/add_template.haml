.col-auto
  %br
  %h2 Add Template
  %br
  %form{ :method => "post", :action => "/admin/templates/add", :enctype => "multipart/form-data" }
    .row.mb-1
      %label.col-5.v-align-center{ :for => "report_type" }
        Report Type &nbsp;
      %input.col-7.form-control#report_type{ :type => "text", :name => "report_type", :required => true }
    .row.mb-1
      %label.col-5.v-align-center{ :for => "description" }
        File Description &nbsp;
      %input.col-7.form-control#description{ :type => "text", :name => "description" }
    .row.mb-1
      %label.col-5.v-align-center{ :for => "finding_template" }
        Finding Template &nbsp;
      %input#finding_template{ :type => "checkbox", :name => "finding_template" }
    .row.mb-1
      %label.col-5.v-align-center{ :for => "status_template" }
        Status Template &nbsp;
      %input#status_template{ :type => "checkbox", :name => "status_template" }
    .row.mb-1
      %label.col-5.v-align-center{ :for => "file" }
        DOCX
      %input.col-7.input-file-upload#file{ :type => "file", :name => "file" }

    %br
    %input.btn.btn-primary{ :type => "submit", :value => "Add" }
    %a.btn.btn-secondary{ :href => "/admin/templates" }
      Cancel
