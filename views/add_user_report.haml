.col-auto
  %br
  %h2 Editing #{@report.report_name} Report
  %br

  %form{ :method => "post", :action => "/admin/add_user/#{@report.id}" }
    %h3 Current Authors
    .table.table-striped
      %table{ :style => "width: 70%" }
        %tr
          %td
            #{@report.owner}
          %td
            &nbsp;
        - if @report.authors
          - @report.authors.each do |user|
            %tr
              %td
                #{user}
              %td
                %a.btn.btn-icon-sm.btn-danger{ :href => "/admin/del_user_report/#{@report.id}/#{user}" }
                  %i.fa.fa-trash-o{ :title => "Remove Author" }

    %br
    .row.mb-1
      %label.col-5.v-align-center{ :for => "author" }
        Add Collaborator
      %select.col-7.custom-select#author{ :name => "author" }
        - @users.each do |user|
          %option #{user.username}

    %br
    %input.btn.btn-primary{ :type => "submit", :value => "Add" }
    %a.btn.btn-secondary{ :href => "/reports/list" }
      Cancel
