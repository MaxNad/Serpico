.col-md-10
  - if @user
    %h3 Edit User
  - else
    %h3 Add User
  %br

  %form{ :method => "post", :action => "/admin/add_user" }
    %div.form-group.row
      %label.col-sm-5.col-form-label{ :for => "username" }
        Username &nbsp;
      %div.col-sm-7.col-md-4.col-md-4
        - if @user
          %input.form-control#username{ :type => "text", :name => "username", :value => "#{@user.username}" }
        - else
          %input.form-control#username{ :type => "text", :name => "username", :placeholder => "username" }
    %div.form-group.row
      %label.col-sm-5.col-form-label{ :for => "password" }
        Password (Not required for AD Auth Type)
      %div.col-sm-7.col-md-4
        %input.form-control#password{ :type => "password", :name => "password", :placeholder => "password" }
    %div.form-group.row
      %label.col-sm-5.col-form-label{ :for => "auth_type" }
        Authorization Type
      %div.col-sm-7.col-md-4
        - if @user
          %select.form-control#auth_type{ :name => "auth_type" }
            - if @user.auth_type == "AD"
              %option{ :selected => "selected" } AD
            - else
              %option AD
            - if @user.auth_type == "Local"
              %option{ :selected => "selected" } Local
            - else
              %option Local
        - else
          %select.form-control#auth_type{ :name => "auth_type" }
            %option{ :selected => "selected" } AD
            %option Local
    %div.form-group.row
      %label.col-sm-5.col-form-label{ :for => "type" }
        User Level
      %div.col-sm-7.col-md-4
        - if @user
          %select.form-control#type{ :name => "type" }
            - if @user.type == "Administrator"
              %option{ :selected => "selected" } Administrator
            - else
              %option Administrator
            - if @user.type == "User"
              %option{ :selected => "selected" } User
            - else
              %option User
        - else
          %select.form-control#type{ :name => "type" }
            %option{ :selected => "selected" } User
            %option Administrator

    %br
    %div.form-group.row
      %div.col-sm-10
        %input.btn.btn-primary{ :type => "submit", :value => "Add" }
        %a.btn.btn-secondary{ :href => "/admin/list_user" }
          Cancel
