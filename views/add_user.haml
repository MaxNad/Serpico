.col-auto
  %br
  - if @user
    %h2 Edit User
  - else
    %h2 Add User
  %br

  %form{ :method => "post", :action => "/admin/add_user" }
    .row.mb-1
      %label.col-5.v-align-center{ :for => "username" }
        Username &nbsp;
      - if @user
        %input.col-7.form-control#username{ :type => "text", :name => "username", :value => "#{@user.username}" }
      - else
        %input.col-7.form-control#username{ :type => "text", :name => "username" }
    .row.mb-1
      %label.col-5.v-align-center{ :for => "password" }
        Password (Not required for AD Auth Type)
      %input.col-7.form-control#password{ :type => "password", :name => "password" }
    .row.mb-1
      %label.col-5.v-align-center{ :for => "auth_type" }
        Authorization Type
      - if @user
        %select.col-7.custom-select#auth_type{ :name => "auth_type" }
          - if @user.auth_type == "AD"
            %option{ :selected => "selected" } AD
          - else
            %option AD
          - if @user.auth_type == "Local"
            %option{ :selected => "selected" } Local
          - else
            %option Local
      - else
        %select.col-7.custom-select#auth_type{ :name => "auth_type" }
          %option{ :selected => "selected" } AD
          %option Local
    .row.mb-1
      %label.col-5.v-align-center{ :for => "type" }
        User Level
      - if @user
        %select.col-7.custom-select#type{ :name => "type" }
          - if @user.type == "Administrator"
            %option{ :selected => "selected" } Administrator
          - else
            %option Administrator
          - if @user.type == "User"
            %option{ :selected => "selected" } User
          - else
            %option User
      - else
        %select.col-7.custom-select#type{ :name => "type" }
          %option{ :selected => "selected" } User
          %option Administrator

    %br
    %input.btn.btn-primary{ :type => "submit", :value => "Add" }
    %a.btn.btn-secondary{ :href => "/admin/list_user" }
      Cancel
